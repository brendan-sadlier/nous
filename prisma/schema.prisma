generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
  // uncomment next line if you use Prisma <5.10
  // directUrl = env("DATABASE_URL_UNPOOLED")
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

enum CourseStatus {
  ACTIVE
  INACTIVE
}

model User {
  id            String      @id @unique
  email         String      @unique
  firstName     String
  lastName      String
  profileImage  String

  role         Role        @default(STUDENT)

  createdAt     DateTime    @default(now())
  courses       Course[]
}

model Course {
  id          String      @id @default(uuid())
  title       String
  description String
  status      CourseStatus @default(ACTIVE)
  createdAt   DateTime    @default(now())
  content     Content[]

  teacher     User        @relation(fields: [teacherId], references: [id])
  teacherId   String
}

model Content {
  id          String      @id @default(uuid())
  title       String
  description String
  materials   String[]
  createdAt   DateTime    @default(now())

  course      Course      @relation(fields: [courseId], references: [id])
  courseId    String
}
